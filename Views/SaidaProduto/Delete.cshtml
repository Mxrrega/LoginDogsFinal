@model LoginCliente.Models.SaidaProduto

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/StyleDelete.css" />
<h1>Deletar</h1>

<h3>Você tem certeza que quer deletar isso?</h3>
<div>
    <h4>Saida de Produto</h4>
    <hr />
    <div class="box">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.ClienteNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto.ProdutoNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeSaidaProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeSaidaProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataSaidaProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataSaidaProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.UsuarioNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoSaida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoSaida.TipoSaidaDescricao)
        </dd>
    </dl>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
